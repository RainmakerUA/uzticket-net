  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command=":; exit 0&#xD;&#xA;if $(ConfigurationName) == Debug copy /A /Y $(SolutionDir).env $(ProjectDir)$(OutDir).env" />
  </Target>

</Project>
