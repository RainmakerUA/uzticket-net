  <ItemGroup>
    <EmbeddedResource Include="Properties\host.config" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Modules\RM.UzTicket.Proxy\RM.UzTicket.Proxy.csproj" />
